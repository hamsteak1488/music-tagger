<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    android:layout_marginBottom="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageMV"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_baseline_music_video_24"
        android:layout_marginStart="5dp"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/songNameMV"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Song Name"
        android:layout_toEndOf="@id/imageMV"
        android:layout_toStartOf="@id/songDuration"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/artistMV"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Artist"
        android:layout_toEndOf="@id/imageMV"
        android:layout_toStartOf="@id/songDuration"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="@string/start_tv"
        android:gravity="center"
        android:layout_gravity="end"
        android:textColor="@color/black"
        android:layout_toStartOf="@id/optionMV"
        android:layout_marginHorizontal="5dp"/>

    <ImageButton
        android:id="@+id/optionMV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/baseline_more_vert_24"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:contentDescription="More Options"/>

</RelativeLayout>